<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv_parent_layout_general_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/white"
        android:visibility="invisible"
        tools:visibility="invisible"
        android:layout_margin="@dimen/margin_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content_item_general_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/iv_picture_href_general_search"
                android:layout_width="@dimen/image_size_96dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@color/transparent"
                android:src="@drawable/ic_alert_error"/>

        <TextView
                android:id="@+id/tv_title_general_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_picture_href_general_search"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_start_price_general_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/label_start_price_general_search"
                app:layout_constraintStart_toEndOf="@id/iv_picture_href_general_search"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="$9.99"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/label_start_price_general_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_picture_href_general_search"
                app:layout_constraintBottom_toBottomOf="@+id/iv_picture_href_general_search"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:maxLines="2"
                android:text="Start Price"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_12sp"/>

        <TextView
                android:id="@+id/tv_buy_now_price_general_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/label_buy_now_price_general_search"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:text="$9.99"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/label_buy_now_price_general_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/iv_picture_href_general_search"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:text="Buy Now"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_12sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>