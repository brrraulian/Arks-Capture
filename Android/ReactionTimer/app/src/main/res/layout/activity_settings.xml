<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdown"
        android:layout_marginTop="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginStart="@dimen/settings_text_view_margin_start_end"
        android:textSize="@dimen/text_view_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="@dimen/text_view_settings"
        android:textColor="@color/gray"
        android:inputType="number"
        android:layout_marginTop="@dimen/settings_edit_text_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginEnd="@dimen/settings_edit_text_margin_end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_countdown"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/settings_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_view_margin_top_bottom"
        android:layout_marginStart="@dimen/settings_view_margin_start_end"
        android:layout_marginEnd="@dimen/settings_view_margin_start_end"
        app:layout_constraintTop_toBottomOf="@id/text_view_countdown"/>

    <TextView
        android:id="@+id/text_view_random_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random min"
        android:layout_marginTop="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginStart="@dimen/settings_text_view_margin_start_end"
        android:textSize="@dimen/text_view_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_countdown" />

    <EditText
        android:id="@+id/edit_text_random_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/text_view_settings"
        android:textColor="@color/gray"
        android:inputType="number"
        android:layout_marginTop="@dimen/settings_edit_text_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginEnd="@dimen/settings_edit_text_margin_end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_countdown" />

    <View
        android:id="@+id/view_random_min"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/settings_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_view_margin_top_bottom"
        android:layout_marginStart="@dimen/settings_view_margin_start_end"
        android:layout_marginEnd="@dimen/settings_view_margin_start_end"
        app:layout_constraintTop_toBottomOf="@id/text_view_random_min"/>

    <TextView
        android:id="@+id/text_view_random_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random max"
        android:layout_marginTop="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_text_view_margin_top_bottom"
        android:layout_marginStart="@dimen/settings_text_view_margin_start_end"
        android:textSize="@dimen/text_view_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_random_min" />

    <EditText
        android:id="@+id/edit_text_random_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="@dimen/text_view_settings"
        android:textColor="@color/gray"
        android:inputType="number"
        android:layout_marginTop="@dimen/settings_edit_text_margin_top_bottom"
        android:layout_marginBottom="@dimen/settings_edit_text_margin_top_bottom"
        android:layout_marginEnd="@dimen/settings_edit_text_margin_end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_random_min" />

</android.support.constraint.ConstraintLayout>